<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height48"
    android:layout_gravity="center_vertical"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/padding5"
        android:weightSum="1" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.78"
            android:paddingLeft="@dimen/padding5"
            android:paddingRight="@dimen/padding5" >

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="@dimen/width20"
                android:layout_height="@dimen/height20"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/ic_launcher"
                android:scaleType="centerInside" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin6"
                android:layout_toRightOf="@+id/avatar"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/comment"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right|center_vertical"
                    android:gravity="left|center_vertical"
                    android:lineSpacingMultiplier="1.2"
                    android:textColor="@color/common_feedback_text"
                    android:text="關於新版扇贝app"
                    android:textSize="@dimen/textsize15" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/margin6"
            android:layout_marginTop="@dimen/margin3"
            android:layout_weight="0.22"
            android:paddingBottom="@dimen/padding3"
            android:paddingLeft="@dimen/padding25"
            android:paddingRight="@dimen/padding5" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true" >

                <TextView
                    android:id="@+id/author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:maxWidth="@dimen/width50"
                    android:singleLine="true"
                    android:text="xingHong"
                    android:textColor="@color/common_green"
                    android:textSize="@dimen/textsize13" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin3"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/common_text"
                    android:text="2月12日,   10月17日"
                    android:textSize="@dimen/textsize13" />
            </LinearLayout>

            <ImageView
                android:id="@+id/img_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:paddingLeft="@dimen/padding2"
                android:src="@drawable/ic_launcher" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/img_dashed_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin1"
        android:background="@drawable/dashed_line" />

</LinearLayout>